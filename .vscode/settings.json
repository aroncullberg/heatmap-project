{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "black-formatter.args": [
    "--line-length=80",
    // "--skip-imports"
  ],
  "flake8.args": [
    "--max-line-length=80"
  ]
}